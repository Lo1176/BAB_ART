    <div class="container-search-bar" >
      <%= simple_form_for :search, url: root_path, method: :get do |f| %>
      <div class="card-search d-flex flex-column" style="background-image: linear-gradient(rgba(0,0,0,0.5),rgba(0,0,0,0.5)), url(https://images.unsplash.com/photo-1541367777708-7905fe3296c0?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2272&q=80);">
        <h2 id="slogan" class="text-center mb-3">Shine with a piece of Art</h2>
        <div class="search-form-control form-group">
          <%= text_field_tag :query, params[:query], class: "form-control string required", id: "search_query", placeholder: "Picasso" %>
          <button name="button" type="submit" class="btn btn-full">
            <i class="fas fa-search"></i>
          </button>
        </div>
        <div class="d-inline-flex justify-content-between">
          <div class="mr-1">
            <%= f.input :start_date, as: :string, required: false, label: false, input_html: {class: "datepicker"}, placeholder: 'Rent start'
            %>
          </div>
          <div class="ml-1">
            <%= f.input :end_date, as: :string, required: false, label: false, input_html: {class: "datepicker"}, placeholder: 'Rent end'
            %>
          </div>
        </div>
        <%= f.input :category, as: :select, collection: ['painting', 'sculture','photography', 'drawing'], label: false, prompt: 'Choose categories' %>
