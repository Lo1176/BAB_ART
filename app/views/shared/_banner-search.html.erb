<!-- START OF FORM -->
    <div class="container-search-bar" >
      <%= simple_form_for :search, url: root_path, method: :get do |f| %>
        <div class="card-search d-flex flex-column" style="background-image: linear-gradient(rgba(0,0,0,0.5),rgba(0,0,0,0.5)), url(https://images.unsplash.com/photo-1541367777708-7905fe3296c0?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2272&q=80);">
        <h2 id="slogan" class="text-center mb-3">Shine with a piece of Art</h2>
        <div class="search-form-control form-group">
          <%= text_field_tag :query, params[:query], class: "form-control string required", id: "search_query", placeholder: "Picasso..." %>
          <button name="button" type="submit" class="btn btn-full">
            <i class="fas fa-search"></i>
          </button>
        </div>

        <div class="dates-form">
          <div class="d-inline-flex justify-content-between">
            <div class="mr-1">
              <%= f.input :start_date, as: :string, required: false, label: false, input_html: {class: "datepicker"}, placeholder: 'From?'
              %>
            </div>
            <div class="ml-1">
              <%= f.input :end_date, as: :string, required: false, label: false, input_html: {class: "datepicker"}, placeholder: 'Until?'
              %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <!-- <label class="control-label check_boxes optional">Categories</label> -->
          <input type="hidden" name="post[categories][]" value="">

          <div class="category-choices">
            <% ['Painting', 'Sculpture', 'Photography'].each do |category| %>
              <input hidden type="checkbox" value="<%= category %>" name="post[categories][]" id="post_categories_<%= category %>">

              <label class="category-choice" for="post_categories_<%= category %>">
                <%= category %>
              </label>
            <% end %>

            <%#= f.input :categories, collection: ['painting', 'sculpture', 'photos'] %>
           </div>
        </div>

<!--         <div class="search-form-control form-group">
          <input class="form-control string required" type="text" name="search[query]" id="search_query" />
          <button name="button" type="submit" class="btn btn-full">
            <i class="fas fa-search"></i>
          </button>
        </div> -->
      </div>
      <% end %>
    </div>


