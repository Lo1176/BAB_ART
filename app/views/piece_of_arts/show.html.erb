<%#= render 'shared/banner-search' %>

<div class="show-poa-container">
  <div class="card-show-poa">
    <% if @piece_of_art.photo.attached? %>
      <div class="card-picture" style="background-image: url(<%= cl_image_path(@piece_of_art.photo.key, height: 300, width: 400, crop: :fill) %>);">
      </div>
    <% else %>
      <div class="card-picture" style="background-image: url(<%= image_path('https://images.unsplash.com/photo-1555443805-658637491dd4?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjF9&auto=format&fit=crop&w=932&q=80') %>);">
      </div>
    <% end %>

    <div class="card-description">
      <h1><%= @piece_of_art.name %> </h1>
      <h2><%= @piece_of_art.artist_name %> </h2>
      <p>Category: <%= @piece_of_art.category %></p>
      <p>Description: <br><%= @piece_of_art.description %></p>
      <p>Daily price: <%=@piece_of_art.daily_price %> â‚¬</p>
      <% if @piece_of_art.available_for_sale == true %>
        <p>Available for Sale!</p>
        <p>Buying price :<%= @piece_of_art.buying_price %></p>
      <% end %>
      <button name="button" type="submit" class="btn btn-empty" id="book-now-show-poa">
        <i class="fas fa-palette"> <%= link_to 'Book it!', new_piece_of_art_booking_path(@piece_of_art) %>
        </i>
      </button>
    </div>


  </div>
</div>

